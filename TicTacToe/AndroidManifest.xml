<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.medtech.tictactoe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="hu.medtech.tictactoe.GlobalVariables"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hu.medtech.tictactoe.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.medtech.tictactoe.DeviceConnect"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" 
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="hu.medtech.tictactoe.HighScoreActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/FullHeightDialog" >
 <!-- own style -->
        </activity>
        <activity
            android:name="hu.medtech.tictactoe.OptionsActivity"
            android:label="@string/title_activity_options" 
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>